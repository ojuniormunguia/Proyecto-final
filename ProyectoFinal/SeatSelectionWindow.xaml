<Window x:Class="ProyectoFinal.SeatSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFinal"
        mc:Ignorable="d"
        Title="SeatSelectionWindow" Height="450" Width="800">
    <Grid>
        <UniformGrid Columns="10" Rows="10" Margin="10">
            <ItemsControl ItemsSource="{Binding Seats}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding SeatNumber}" 
                                IsEnabled="{Binding IsAvailable}" 
                                Background="{Binding IsSelected, Converter={StaticResource BooleanToBrushConverter}}"
                                Command="{Binding DataContext.ToggleSeatCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                CommandParameter="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </UniformGrid>
        <Button Content="Siguiente" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10"
                Command="{Binding SiguienteCommand}"/>
    </Grid>
</Window>
